# Backend host/port
HOST=0.0.0.0
PORT=8080

# REQUIRED in production. If missing, the backend will generate an ephemeral key (dev-only).
SECRET_KEY=change-me-to-a-long-random-string

# Where your projects live (Linux Mint default)
DEV_ROOT=~/Desktop/Devs

# Where per-project dashboard logs are written
DASHBOARD_LOGS=~/Desktop/Devs/dashboard_logs

# Auth database location (stored outside the repo by default)
AUTH_DB=~/.local/share/homelab-dashboard/auth.db

# Session cookie settings
COOKIE_NAME=homelab_dashboard_session
COOKIE_SECURE=false
SESSION_TTL_SECONDS=604800

# Experimental web terminal (DANGEROUS - equivalent to remote shell access)
ENABLE_WEB_TERMINAL=false

# Optional: restrict terminal access to specific usernames (comma-separated). Recommended.
TERMINAL_ALLOWED_USERS=admin

# Shell binary used for the PTY session (Linux/Mint default)
TERMINAL_SHELL=/bin/bash

# Limits and safety
TERMINAL_MAX_SESSIONS_PER_USER=2
TERMINAL_MAX_SESSIONS_TOTAL=10
TERMINAL_IDLE_TIMEOUT_SECONDS=1800

# Optional: allowlist full Origins for the terminal WebSocket (comma-separated), e.g.:
# TERMINAL_ALLOWED_ORIGINS=https://dashboard.example.com,https://dash.lan:8443
TERMINAL_ALLOWED_ORIGINS=

# Used by scripts/init_db.py (optional)
ADMIN_USER=admin
ADMIN_PASS=change-me
